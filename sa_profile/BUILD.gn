import("//build/ohos.gni")
import("//build/ohos/sa_profile/sa_profile.gni")
import("../companion_device_auth.gni")

ohos_sa_profile("companion_device_auth_sa_profile") {
  sources = [ "default/945.json" ]

  part_name = companion_device_auth_part_name
}

ohos_prebuilt_etc("companion_device_auth_sa_profile.init") {
  source = "default/companiondeviceauth.cfg"
  relative_install_dir = "init"

  subsystem_name = companion_device_auth_subsystem_name
  part_name = companion_device_auth_part_name
}

group("sa_profile_group") {
  if (!companion_device_auth_has_ext) {
    deps = [
      ":companion_device_auth_sa_profile",
      ":companion_device_auth_sa_profile.init",
    ]
  } else {
    deps = []
  }
}
