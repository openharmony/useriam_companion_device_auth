import("//build/test.gni")
import("../../../companion_device_auth.gni")
import("../../../frameworks/native/client/BUILD.gni")
import("../../test_config.gni")

ohos_unittest("companion_device_auth_client_test") {
  sanitize = companion_device_auth_unit_test_sanitize
  branch_protector_ret = "pac_ret"
  module_out_path = "companion_device_auth/client"

  cflags = companion_device_auth_unit_test_cflags
  ldflags = companion_device_auth_unit_test_ldflags

  sources = companion_device_auth_client_full_sources + [
              # Test sources
              "cases/companion_device_auth_client_impl_test.cpp",
              "cases/system_ability_listener_test.cpp",
            ]

  include_dirs = [
    "cases/mock",
    "${companion_device_auth_path}/frameworks/native/client/inc",
    "${companion_device_auth_path}/frameworks/native/ipc/inc",
  ]

  deps = companion_device_auth_client_deps

  external_deps = companion_device_auth_client_external_deps +
                  companion_device_auth_unit_test_external_deps

  remove_configs = [ "//build/config/compiler:no_exceptions" ]

  subsystem_name = companion_device_auth_subsystem_name
  part_name = companion_device_auth_part_name
}

group("client_test") {
  testonly = true
  deps = [ ":companion_device_auth_client_test" ]
}
