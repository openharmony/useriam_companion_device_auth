import("//build/test.gni")
import("../../../../companion_device_auth.gni")
import("../../../../services/BUILD.gni")
import("../../../../test/fake/BUILD.gni")

ohos_moduletest("companion_device_auth_services_cpp_moduletest") {
  sanitize = companion_device_auth_sanitize
  branch_protector_ret = "pac_ret"
  module_out_path = "companion_device_auth/services"

  cflags = [
    "-DENABLE_TEST",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  sources = companion_device_auth_service_sources_for_test

  sources += companion_device_auth_fake_sources + [
               # Sample module test
               "cases/sample_test.cpp",
             ]

  include_dirs = [
    "cases",
    "inc",
  ]

  include_dirs += companion_device_auth_fake_include_dirs

  configs = [ "${companion_device_auth_path}/services:service_config" ]

  deps = companion_device_auth_service_deps

  external_deps = companion_device_auth_service_external_deps_for_ut + [
                    "googletest:gmock_main",
                    "googletest:gtest_main",
                  ]

  remove_configs = [ "//build/config/compiler:no_exceptions" ]

  subsystem_name = companion_device_auth_subsystem_name
  part_name = companion_device_auth_part_name
}
